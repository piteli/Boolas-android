<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rush.wender.boolas.RegisterActivity">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/include" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/regName"
        android:hint="Name"
        android:layout_below="@+id/include"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/regNo"
        android:layout_below="@+id/regName"
        android:hint="Staff / Student id"
        android:textSize="16sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/regPhone"
        android:hint="Phone Number"
        android:textSize="16sp"
        android:layout_below="@+id/regNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/regNo"
        android:layout_alignEnd="@+id/regNo" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:id="@+id/regFac"
        android:layout_below="@+id/regPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/regEmail"
        android:layout_alignRight="@+id/regPhone"
        android:layout_alignEnd="@+id/regPhone" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regButton"
        android:layout_below="@+id/regFac"
        android:layout_marginTop="57dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regPass"
        android:textSize="16sp"
        android:hint="Password"
        android:layout_below="@+id/regName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="170dp" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:ems="10"
        android:textSize="16sp"
        android:id="@+id/regEmail"
        android:hint="Email"
        android:layout_below="@+id/regPass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:id="@+id/spinnerDep"
        android:layout_below="@+id/regEmail"
        android:layout_alignLeft="@+id/regEmail"
        android:layout_alignStart="@+id/regEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

</RelativeLayout>
